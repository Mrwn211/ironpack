            <label class="form-check-label" for="ux">UX design</label>
            <input class="form-check-input" type="checkbox" id="data" value="data">
            <label class="form-check-label" for="data">Data Analyst</label>
            <div class="form-group">
              <label><strong>Summary</strong></label>
              <br>
              <textarea class="form-control" required></textarea>
            </div>
            <div class="form-group">
              <label>Skills</label>
              <br>
              <input class="form-check-input" type="checkbox" id="ReactJS" value="ReactJS">
              <label class="form-check-label" for="ReactJS">ReactJS</label>
              <input class="form-check-input" type="checkbox" id="NodeJS" value="NodeJs">
              <label class="form-check-label" for="NodeJS">NodeJS</label>
              <input class="form-check-input" type="checkbox" id="HTML5" value="HTML5">
              <label class="form-check-label" for="HTML5">HTML5</label>
              <input class="form-check-input" type="checkbox" id="CSS3" value="CSS3">
              <label class="form-check-label" for="CSS3">CSS3</label>
              <input class="form-check-input" type="checkbox" id="Javascript" value="Javascript">
              <label class="form-check-label" for="Javascript">Javascript</label>
              <input class="form-check-input" type="checkbox" id="Python" value="Python">
              <label class="form-check-label" for="Python">Python</label>
              <input class="form-check-input" type="checkbox" id="UX Design" value="UX Design">
              <label class="form-check-label" for="UX Design">UX Design</label>
              <input class="form-check-input" type="checkbox" id="Data" value="Data">
              <label class="form-check-label" for="Data">Data</label>
              <input class="form-check-input" type="checkbox" id="VueJS" value="VueJS">
              <label class="form-check-label" for="Data">VueJS</label>
              <div class="form-group">
                <label><strong>Duration</strong></label>
                <br>
                <input class="form-check-input" type="checkbox" id="unMois" value="unMois">
                <label class="form-check-label" for="unMois">Moins d'un mois</label>
                <input class="form-check-input" type="checkbox" id="troisMois" value="troisMois">
                <label class="form-check-label" for="troisMois">D'un à trois mois</label>
                <input class="form-check-input" type="checkbox" id="sixMois" value="sixMois">
                <label class="form-check-label" for="sixMois">De trois à six mois</label>
                <input class="form-check-input" type="checkbox" id="plusSixMois" value="plusSixMois">
                <label class="form-check-label" for="plusSixMois">Plus de six mois</label>
              </div>
              <div class="modal-footer">
                <input type="button" class="btn btn-default" data-dismiss="modal" value="Cancel">
                <input type="submit" class="btn btn-success" value="Add">
              </div>
            </div>
          </div>
        </div>
