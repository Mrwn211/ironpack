<div class="container">
  <h1>Edit Profile</h1>
  <hr>
  <div class="row">
    <!-- left column -->
    <div class="col-md-3">
      <div class="text-center">
        <img src="//placehold.it/100" class="avatar img-circle" alt="avatar">
        <h6>Upload a different photo...</h6>
        <input type="file" class="form-control">
      </div>
      <br>
      <div class="text-center">
        <a href="/my-projects" class="btn btn-primary btn-lg active" role="button" aria-pressed="true">My projects</a>

      </div>
    </div>


    <!-- edit form column -->
    <div class="col-md-9 personal-info">
      <div class="alert alert-info alert-dismissable">
        <a class="panel-close close" data-dismiss="alert">Ã—</a>
        <i class="fa fa-coffee"></i>
        This is an <strong>.alert</strong>. Use this to show important messages to the user.
      </div>
      <h3>Personal info</h3>
      {{#unless isEnterprise }}
      <form class="form-horizontal" role="form">
        <div class="form-group">
          <label class="col-lg-3 control-label">First name:</label>
          <div class="col-lg-8">
            <input class="form-control" type="text" value="Jane">
          </div>
        </div>
        <div class="form-group">
          <label class="col-lg-3 control-label">Last name:</label>
          <div class="col-lg-8">
            <input class="form-control" type="text" value="Bishop">
          </div>
        </div>
        {{/unless}}
        {{#if isEnterprise }}
        <div class="form-group">
          <label class="col-lg-3 control-label">Company:</label>
          <div class="col-lg-8">
            <input class="form-control" type="text" value="">
          </div>
        </div>
        {{else}}
        <div class="form-group">
          <label class="col-lg-3 control-label">Competences:</label>
          <div class="form-check form-check-inline col-lg-3">
            <input class="form-check-input" type="checkbox" id="ReactJS" value="ReactJS">
            <label class="form-check-label" for="ReactJS">ReactJS</label>
          </div>
          <div class="form-check form-check-inline col-lg-3">
            <input class="form-check-input" type="checkbox" id="NodeJS" value="NodeJs">
            <label class="form-check-label" for="NodeJS">NodeJS</label>
          </div>
          <div class="form-check form-check-inline col-lg-3">
            <input class="form-check-input" type="checkbox" id="HTML5" value="HTML5">
            <label class="form-check-label" for="HTML5">HTML5</label>
          </div>
          <div class="form-check form-check-inline col-lg-3">
            <input class="form-check-input" type="checkbox" id="CSS3" value="CSS3">
            <label class="form-check-label" for="CSS3">CSS3</label>
          </div>
          <div class="form-check form-check-inline col-lg-3">
            <input class="form-check-input" type="checkbox" id="Javascript" value="Javascript">
            <label class="form-check-label" for="Javascript">Javascript</label>
          </div>
          <div class="form-check form-check-inline col-lg-3">
            <input class="form-check-input" type="checkbox" id="Python" value="Python">
            <label class="form-check-label" for="Python">Python</label>
          </div>
          <div class="form-check form-check-inline col-lg-3">
            <input class="form-check-input" type="checkbox" id="UX Design" value="UX Design">
            <label class="form-check-label" for="UX Design">UX Design</label>
          </div>
          <div class="form-check form-check-inline col-lg-3">
            <input class="form-check-input" type="checkbox" id="Data" value="Data">
            <label class="form-check-label" for="Data">Data</label>
          </div>
          <div class="form-check form-check-inline col-lg-3">
            <input class="form-check-input" type="checkbox" id="VueJS" value="VueJS">
            <label class="form-check-label" for="Data">VueJS</label>
          </div>
        </div>
        {{/if}}
        <div class="form-group">
          <label class="col-lg-3 control-label">Email:</label>
          <div class="col-lg-8">
            <input class="form-control" type="text" value="janesemail@gmail.com">
          </div>
        </div>
        <div class="form-group">
        </div>
        <div class="form-group">
          <label class="col-md-3 control-label">Password:</label>
          <div class="col-md-8">
            <input class="form-control" type="password" value="11111122333">
          </div>
        </div>
        <div class="form-group">
          <label class="col-md-3 control-label">Confirm password:</label>
          <div class="col-md-8">
            <input class="form-control" type="password" value="11111122333">
          </div>
        </div>
        <div class="form-group">
          <label class="col-md-3 control-label"></label>
          <div class="col-md-8">
            <input type="button" class="btn btn-primary" value="Save Changes">
            <span></span>
            <input type="reset" class="btn btn-default" value="Cancel">
          </div>
        </div>
      </form>
    </div>
  </div>
</div>
<hr>