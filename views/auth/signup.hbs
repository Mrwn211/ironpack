<div class="signup-form">
  <form action="" method="post">
    <h2 class="text-center">Sign up</h2>
    <div class="form-group">
      <input type="email" name="email" class="form-control" placeholder="name@email.com" required>
    </div>
    <div class="form-group">
      <input type="text" name="username" class="form-control" placeholder="username" required>
    </div>
    <div class="form-group">
      <input type="password" name="password" class="form-control" placeholder="Password" required="required">
      {{#if message }}
      <div class="error-message">{{ message }}</div>
      {{/if}}
    </div>
    <div class="form-group radio-container">
      <label class="radio-inline"><input type="radio" name="accountType" value="ironhacker" required>Ironhacker</label>
      <label class="radio-inline"><input type="radio" name="accountType" value="enterprise" required>Enterprise</label>
    </div>
    <div class="form-group">
      <button type="submit" class="btn btn-primary btn-block">Sign up</button>
    </div>
    {{!-- <div class="clearfix">
      <label class="pull-left checkbox-inline"><input type="checkbox"> Remember me</label>
      <a href="#" class="pull-right">Forgot Password?</a>
    </div> --}}
  </form>
  <p class="account-message">
    Do you already have an account?
    <a href="/auth/login">Login</a>
  </p>
</div>