<div id="throbber" style="display:none; min-height:120px;"></div>
<div id="noty-holder"></div>
<div id="wrapper">
  <!-- Navigation -->
  <nav class="navbar navbar-inverse navbar-fixed-top" role="navigation">
    <!-- Brand and toggle get grouped for better mobile display -->
    <div class="navbar-header">
      <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-ex1-collapse">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
    </div>

    <!-- Top Menu Items -->
    <ul class="
        nav navbar-right top-nav">
      <li class="dropdown">
        <a href="#" class="dropdown-toggle" data-toggle="dropdown">Admin User <b class="fa fa-angle-down"></b></a>
        <ul class="dropdown-menu">
          <li><a href="/profile/edit"><i class="fa fa-fw fa-user"></i> Edit Profile</a></li>
          <li class="divider"></li>
          <li><a href="/"><i class="fa fa-fw fa-power-off"></i> Logout</a></li>
        </ul>
      </li>
    </ul>
    <!-- Sidebar Menu Items - These collapse to the responsive navigation menu on small screens -->
    <div class="collapse navbar-collapse navbar-ex1-collapse">
      <ul class="nav navbar-nav side-nav side-text">
        <div id="filters">
          <h2>Category</h2>
          <div>
            <input class="category typo-text" name="category" type="checkbox" id="Front-end" value="Front-end">
            <label class="category typo-text" for="Front-end">Front-end</label>
          </div>
          <div>
            <input class="category typo-text" name="category" type="checkbox" id="Back-end" value="Back-end">
            <label class="category typo-text" for="Back-end">Back-end</label>
          </div>
          <div>
            <input class="category typo-text" name="category" type="checkbox" id="FullStack" value="FullStack">
            <label class="category typo-text" for="FullStack">FullStack</label>
          </div>
          <div>
            <input class="category typo-text" name="category" type="checkbox" id="UX-design" value="UX-design">
            <label class="category typo-text" for="UX-design">UX-design</label>
          </div>
          <div>
            <input class="category typo-text" name="category" type="checkbox" id="Data-Analyst" value="Data-Analyst">
            <label class="category typo-text" for="Data-Analyst">Data-Analyst</label>
          </div>

          <h2>Skills</h2>
          {{#each skills}}
          <div>
            <input class="skills typo-text" name="skills" type="checkbox" id="{{this._id}}" value="{{this._id}}">
            <label class="skills typo-text" for="{{this._id}}">{{this.name}}</label>
          </div>
          {{/each}}
        </div>
      </ul>
    </div>
    <!-- /.navbar-collapse -->
  </nav>

  <div id="page-wrapper">
    <div class="container-fluid">
      <!-- Page Heading -->
      <div class="row" id="main">
        <div class="col-sm-12 col-md-12 well">
          {{#each projectsAll}}
          <!-- Projects -->
          <div class="project-item col-xs-12 col-sm-6 col-md-4">
            <div class="image-flip" ontouchstart="this.classList.toggle('hover');">
              <div class="mainflip">
                <div class="frontside">
                  <div class="card">
                    <div class="card-body text-center">
                      <img class="img-fluid" src="{{this.owner.image}}" alt="card image" />
                      <h4 class="card-title">{{this.owner.companyName}}</h4>
                      <p class="category-item card-text" data-category="{{this.category}}">Category: {{this.category}}
                      </p>
                      <p class="category-item card-text">Duration: {{this.duration}}</p>
                      <ul class="fa-ul list-inline">
                        {{#each skills}}
                        <li class="skill-item-project list-inline-item" data-skill-project="{{this._id}}">
                          <div><i class="fa fa-check"></i>{{this.name}}</div>
                        </li>
                        {{/each}}
                      </ul>
                      
                      <a href="#" class="btn btn-primary btn-sm"><i class="fa fa-arrow-circle-o-right"></i></a>
                    </div>
                  </div>
                </div>
                <div class="backside">
                  <div class="card">
                    <div class="card-body text-center">
                      <img class="img-fluid" src="{{this.owner.image}}" alt="card image" />
                      <h4 class="card-title">{{this.owner.companyName}}</h4>
                      <p class="category-item card-text">Project name: {{this.name}}</p>
                      <p class="category-item card-text">{{this.summary}}</p>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
          {{/each}}
        </div>
      </div>
      <!-- /.row -->
    </div>
    <!-- /.container-fluid -->
  </div>
  <!-- /#page-wrapper -->
</div><!-- /#wrapper -->